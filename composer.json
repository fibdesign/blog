{
    "name": "fibdesign/blog",
    "description": "Laravel Blog Api",
    "keywords": [
        "fibdesign",
        "blog",
        "api"
    ],
    "homepage": "https://github.com/fibdesign/blog",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sadegh Ghaderi",
            "email": "msghaderi99@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Fibdesign\\Blog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fibdesign\\Blog\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fibdesign\\Blog\\BlogServiceProvider"
            ],
            "aliases": {
                "Blog": "Fibdesign\\Blog\\BlogFacade"
            }
        }
    }
}
